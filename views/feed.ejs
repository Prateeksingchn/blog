<%- include('./partials/header.ejs') %>

<main class="w-full min-h-screen bg-gradient-to-r from-green-100 to-beige-100 lg:px-10 px-4 py-8">
  <h1 class="text-4xl font-bold text-gray-800 mb-8 text-center">Latest Posts</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% posts.forEach(function(elem, index) { %>
      <article class="rounded-xl shadow-md overflow-hidden bg-white hover:shadow-xl transition duration-300 ease-in-out transform hover:-translate-y-1">
        <a href="/open/posts/<%= elem._id %>" class="block h-full">
          <div class="relative h-64">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="<%= elem.title %>">
            <div class="absolute inset-0 bg-black bg-opacity-30 flex items-end">
              <h2 class="text-white text-xl font-bold p-4 line-clamp-2"><%= elem.title %></h2>
            </div>
          </div>
          <div class="p-6 flex flex-col justify-between h-[calc(100%-16rem)]">
            <p class="text-sm text-gray-600 mb-4 line-clamp-3"><%= elem.excerpt %></p>
            <div class="flex items-center justify-between text-sm text-gray-500">
              <span>
                <div class="flex-shrink-0">
                  <img class="h-10 w-10 rounded-full" src="<%= user.avatar || './images/default-avatar.png' %>" alt="<%= user.username %>">
                </div>
                <%= elem.user.username %>
              </span>
            </div>
          </div>
        </a>
      </article>
    <% }) %>
  </div>

  <% if (posts.length === 0) { %>
    <p class="text-center text-gray-600 mt-8 text-lg">No posts found. Be the first to create a post!</p>
  <% } %>

</main>

<%- include('./partials/footer.ejs') %>